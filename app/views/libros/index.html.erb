<p id="notice"><%= notice %></p>

<h2>Libros</h2>

<div class="d-flex justify-content-end">
  <div class="m-2">
    <%= link_to 'Nuevo Libro', new_libro_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Autor</th>
      <th>AÃ±o</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libros.each do |libro| %>
      <tr>
        <td><%= libro.titulo %></td>
        <td><%= libro.autor %></td>
        <td><%= libro.anyo %></td>
        <td><%= link_to 'Mostrar', libro, class: "btn btn-link" %></td>
        <td><%= link_to 'Editar', edit_libro_path(libro), class: "btn btn-link"  %></td>
        <td><%= link_to 'Eliminar', libro, method: :delete, data: { confirm: 'Estas seguro?' }, class: "btn btn-link"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

