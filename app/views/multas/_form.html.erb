<%= form_with(model: multa, local: true) do |form| %>
  <% if multa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(multa.errors.count, "error") %> prohibited this multa from being saved:</h2>

      <ul>
        <% multa.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group col-2">
    <%= form.label :valor %>
    <%= form.text_field :valor, class: "form-control"  %>
  </div>

  <div class="field form-group col-2">
    <%= form.label :fecha %>
    <%= form.date_select :fecha, {}, { :class => 'form-control' }  %>
  </div>

  <div class="field  form-group col-2">
    <%= form.label :estado %>
    <%= form.number_field :estado, class: "form-control" %>
  </div>

  <div class="field  form-group col-2">
    <%= form.label :Prestamo_id %>
    <%= form.select :Prestamo_id, options_for_select(Prestamo.all.map{|s|[s.id, s.id]}, form.object.Prestamo_id), {}, { :class => 'form-control' } %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary ml-3" %>
  </div>
<% end %>
