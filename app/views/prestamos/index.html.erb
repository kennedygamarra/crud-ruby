<p id="notice"><%= notice %></p>

<h1>Prestamos</h1>

<div class="d-flex justify-content-between">
  <div class="m-3">
    <form method="GET" class="form-group row">
      <%= select("", "Usuarios_id", Usuario.all.map{|s|[s.nombres, s.id]}, { include_blank: '' }, {class: "form-control"}) %>
      <input type="submit" value="Filtrar" class="btn btn-primary"/>
    </form>
  </div>
  <div class="m-2">
    <%= link_to 'Nuevo Prestamo', new_prestamo_path, class: "btn btn-primary" %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Estado</th>
      <th>Usuarios</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prestamos.each do |prestamo| %>
      <tr>
        <td><%= prestamo.fecha %></td>
        <td><%= prestamo.estado %></td>
        <td><%= prestamo.Usuario.nombres %> <%= prestamo.Usuario.apellidos %></td>
        <td><%= link_to 'Mostrar', prestamo %></td>
        <td><%= link_to 'Editar', edit_prestamo_path(prestamo) %></td>
        <td><%= link_to 'Elimnar', prestamo, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

