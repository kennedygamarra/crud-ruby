<%= form_with(model: prestamo, local: true) do |form| %>
  <% if prestamo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(prestamo.errors.count, "error") %> prohibited this prestamo from being saved:</h2>

      <ul>
        <% prestamo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group col-2">
    <%= form.label :fecha %>
    <%= form.date_select :fecha, {}, { :class => 'form-control' }  %>
  </div>

  <div class="field form-group col-2">
    <%= form.label :estado %>
    <%= form.number_field :estado, class: 'form-control'  %>
  </div>

  <div class="field form-group col-2">
    <%= form.label :Usuarios_id %>
    <%= form.select :Usuarios_id, options_for_select(Usuario.all.map{|s|[s.nombres, s.id]}), {}, { :class => 'form-control' }  %>
  </div>

  <div class="actions form-group">
    <%= form.submit class: "btn btn-primary ml-3" %>
  </div>
<% end %>
